name: Cache Demo Workflow

on: [push, pull_request]

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v3

      - name: Cache dependencies
        id: prime-cache-9c21b8b
        uses: actions/cache@v4
        with:
          path: ~/.cache/dependencies
          key: cache-9c21b8b

      - name: Echo cache hit status
        run: echo "Cache hit? ${{ steps.prime-cache-9c21b8b.outputs.cache-hit }}"
